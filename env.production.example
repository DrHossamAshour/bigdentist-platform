# Production Environment Variables
# Copy this to .env.production and fill in your actual values

# Database (PostgreSQL)
DATABASE_URL="postgresql://username:password@localhost:5432/bigdentist_prod"

# JWT Secret (Generate a strong secret)
JWT_SECRET="your-super-secret-jwt-key-here-minimum-32-characters"

# Stripe Configuration (Live keys for production)
STRIPE_SECRET_KEY="sk_live_your_stripe_live_secret_key_here"
STRIPE_PUBLISHABLE_KEY="pk_live_your_stripe_live_publishable_key_here"

# App Configuration
NEXT_PUBLIC_BASE_URL="https://yourdomain.com"

# Email Configuration (SMTP)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# Upload Configuration (UploadThing)
UPLOADTHING_SECRET="your-uploadthing-secret"
UPLOADTHING_APP_ID="your-uploadthing-app-id"

# Vimeo API Configuration
VIMEO_ACCESS_TOKEN="your-vimeo-access-token"
VIMEO_CLIENT_ID="your-vimeo-client-id"
VIMEO_CLIENT_SECRET="your-vimeo-client-secret"

# Google Analytics
NEXT_PUBLIC_GA_ID="G-XXXXXXXXXX"

# Social Media URLs
NEXT_PUBLIC_FACEBOOK_URL="https://facebook.com/yourpage"
NEXT_PUBLIC_TWITTER_URL="https://twitter.com/yourhandle"
NEXT_PUBLIC_INSTAGRAM_URL="https://instagram.com/yourhandle"
NEXT_PUBLIC_YOUTUBE_URL="https://youtube.com/yourchannel"

# Optional: Redis for caching (if needed)
REDIS_URL="redis://localhost:6379" 